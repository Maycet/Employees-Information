@model Employees.Models.Employee

@{
    ViewData["Title"] = "Employee Details";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Employee Information</h5>
        <table class="table table-bordered">
            <tr>
                <th>Employee ID</th>
                <td>@Model.Id</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Model.Name</td>
            </tr>
            <tr>
                <th>Salary</th>
                <td>@Model.Salary</td>
            </tr>
            <tr>
                <th>Annual Salary</th>
                <td>@Model.AnualSalary</td>
            </tr>
        </table>
        <a href="/Employees/Index" class="btn btn-primary">Back to Employee List</a>
    </div>
</div>